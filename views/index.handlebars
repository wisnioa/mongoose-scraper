<div id="articles">
    {{#each scrapedArticles}}
    <div class="row">
        <div class="col s12">
            <div class="hoverable card panel">

                <div class="articleCard card-content">

                    {{this.title}}
                    <a id="link" target="_blank" href={{this.link}}></a>
                    <p id="note">{{this.note}}</p>
                    <br>
                    <br>

                    <div class="bttnRow">
                        <a class="saveArticleBtn orange darken-4 btn">
                            <i class="material-icons left">save</i>Save Article
                            </a>
                        <a class="writeNoteBtn orange darken-4 btn modal-trigger" href="modal1">
                            <i class="material-icons left">edit</i>Write Note
                            </a>
                    </div>
                </div>
                <div id="modal1" class="modal">
                    <div class="modal-content">
                        <h4>Your note</h4>
                        <div class="row">
                            <div class="input-field col s12">
                                <textarea id="noteText" type="text" class="materialize-textarea validate"></textarea>
                            </div>
                            <div class="modal-footer">
                                <a href="#!" class="modal-close waves-effect waves-green btn-flat">Submit</a>
                            </div>
                        </div>

                    </div>
                </div>
            </div>
        </div>
        {{/each}}
    </div>
    